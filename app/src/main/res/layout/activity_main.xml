<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/membersNameET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Member's name"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/ageET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Age"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/universityET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="University"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/departmentET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Department"
        android:inputType="text"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/beMemberBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/click_member_button_color_change"
        android:text="Be TongSquad Member"
        android:onClick="beMember"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/listBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/click_member_button_color_change"
        android:text="List"
        android:layout_gravity="right"
        android:onClick="showList"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />


</LinearLayout>